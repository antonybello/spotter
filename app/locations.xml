<Page loaded="pageLoaded">
  <GridLayout rows="auto, *">
    <StackLayout row="0">
      <Label id="title" loaded="titleLoaded" text="Current Unoccupied Parking Spots"/>
    </StackLayout>
    <ListView id="listView1" items="{{ unoccupiedSensors }}" row="1">
      <ListView.itemTemplate>
        <Label class="items" loaded="itemsLoaded" text="{{sensorId + ' is ' + distance + ' feet away!' }}"/>
      </ListView.itemTemplate>
    </ListView>
  </GridLayout>
</Page>
